/* pages/detail/detail.wxss */
.divider{
    background-color: #ccc;
    height: 2rpx;
    width: calc(100% - 40rpx);
    margin: 0 auto;
}
.themeDetail{
    margin: 30rpx;
    word-wrap: break-word;
}

/*回复*/
.reply{
    margin: 30rpx;
    border: 1px solid #ccc;
    padding: 20rpx;
    border-radius: 10rpx;
    position: relative;
}
.reply .reply_userInfo .reply_avatar{
    width:82rpx;
    height: 82rpx;
}
