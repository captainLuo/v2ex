.reply_info{
    vertical-align: top;
    height: 82rpx;
    display: inline-block;
    margin-left: 20rpx;
    font-size: 36rpx;
}
.reply .reply_userName{
    display: block;
    vertical-align: top;
    padding: 0;
    margin-bottom: 6rpx;
}
.reply .content{
    margin-top: 20rpx;
    word-wrap: break-word;
}
.reply .replyFloor{
    vertical-align: top;
    height: 82rpx;
    display: inline-block;
    vertical-align: middle;
    line-height: 82rpx;
    position: absolute;
    right: 50rpx;
}
.reply .time{
    font-size: 30rpx;
    padding: 0;
    margin: 0;
}