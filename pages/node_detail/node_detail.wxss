/* pages/node_detail/node_detail.wxss */
.nDetailInfo{
    border: 2rpx solid #ccc;
    margin: 20rpx 30rpx 30rpx 30rpx;
    padding: 20rpx;
}
.nDetailAvatar{
    width: 82rpx;
    height: 82rpx;
}
.info{  
    display: inline-block;
    height: 82rpx;
    vertical-align: top;
    margin-left: 20rpx;
    font-size: 36rpx;
    margin-bottom: 20rpx;
}
.nDetailUserName{
    display: block;
    vertical-align: top;
    margin-bottom: 12rpx;
}
.nDetailReplies{
    display: block;
    font-size: 30rpx;
    margin: 0;
    padding: 0;
}
.nDetailContent{
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}